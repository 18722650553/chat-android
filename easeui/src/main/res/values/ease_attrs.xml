<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EaseTitleBar">
        <attr name="titleBarTitle" format="reference|string"/>
        <attr name="titleBarLeftImage" format="reference"/>
        <attr name="titleBarRightImage" format="reference"/>
        <attr name="titleBarRightTitle" format="reference|string"/>
        <attr name="titleBarBackground" format="reference|color"/>
        <attr name="titleBarArrowColor" format="reference|color"/>
        <attr name="titleBarMenuResource" format="reference"/>
        <attr name="titleBarRightVisible" format="boolean"/>
        <attr name="titleBarDisplayHomeAsUpEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EaseImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="ease_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EaseSearchTextView">
        <attr name="search_drawable_left_width" format="dimension"/>
        <attr name="search_drawable_left_height" format="dimension"/>
        <attr name="search_drawable_right_width" format="dimension"/>
        <attr name="search_drawable_right_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EaseSearchEditText">
        <attr name="search_edit_drawable_left_width" format="dimension"/>
        <attr name="search_edit_drawable_left_height" format="dimension"/>
        <attr name="search_edit_drawable_right_width" format="dimension"/>
        <attr name="search_edit_drawable_right_height" format="dimension"/>
    </declare-styleable>

</resources>
