<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/em_base_color_primary</item>
        <item name="colorPrimaryDark">@color/em_base_color_primary_dark</item>
        <item name="colorAccent">@color/em_base_color_accent</item>
        <item name="android:textColorHint">@color/em_base_color_text_hint</item>
        <item name="android:windowBackground">@color/em_base_color_window_bg</item>
        <item name="android:divider">@drawable/em_default_divider_list</item>
    </style>

    <style name="NoActionBar.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AddContactTheme" parent="AppTheme">
        <item name="searchViewStyle">@style/SearchView.AddContact</item>
    </style>

    <style name="SearchView.AddContact" parent="Widget.AppCompat.SearchView">
        <!--默认hint-->
        <item name="defaultQueryHint">@string/em_search_text_hint</item>
        <!--搜索框内的搜索图标-->
        <item name="searchHintIcon">@drawable/ease_search_icon</item>
        <!--清理按钮图标-->
        <item name="closeIcon">@drawable/em_search_close</item>
        <item name="android:background">@drawable/em_search_tv_bg_shape</item>
    </style>

    <style name="Toolbar.EaseBar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="main_bottom_view_normal">
        <item name="android:textColor">@color/em_main_color_tab_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="main_bottom_view_selected">
        <item name="android:textColor">@color/em_main_color_tab_selected</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
