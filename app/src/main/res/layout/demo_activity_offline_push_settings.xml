<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_offline_push_settings"
    android:background="@color/common_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        app:titleBarTitle="@string/push_settings"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarRightVisible="true"
        app:titleBarRightTitle="@string/save"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:padding="10dip"
            android:text="@string/push_no_disturb"
            android:textColor="@color/btn_gray_pressed" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/btn_gray_normal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_no_disturb"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="10dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="@string/push_no_disturb_on"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif" />

        <CheckBox
            android:id="@+id/cb_no_disturb_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <RelativeLayout
        android:id="@+id/rl_no_disturb_only_night"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="10dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="@string/push_only_on"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif" />

        <CheckBox
            android:id="@+id/cb_no_disturb_only_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:id="@+id/rl_no_disturb_off"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="10dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="@string/push_no_disturb_off"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/cb_no_disturb_off" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />

    <com.hyphenate.chatuidemo.common.widget.SwitchItemView
        android:id="@+id/rl_custom_server"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:switchItemTitle="@string/push_use_fcm"
        app:switchItemTitleSize="14sp"
        android:background="@color/white"/>

</LinearLayout>
